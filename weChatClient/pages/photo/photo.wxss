/* pages/photo/photo.wxss */
#photo{  
    background: #f5f5f5;  
}  

.page__hd{    
    text-align: center;
}
.page__title{
    display: inline-block;    
    font-size: x-large;
    border-bottom: 1rpx solid #CCCCCC;
}
.section__text{
    float: left;    
    width:100%; 
    font-size: x-large;
}
.section{  
    clear: both;  
    width:90%;  
    margin: 2rem auto;  
}  
.button{  
    border: 1px solid #1aad19;  
    border-radius: 2px;  
    font-size: x-large;
}  
.input-text{  
    padding: 5rpx; 
    border: 1rpx solid #ddd;  
    width: 100%;  
    background-color: #FFFFFF;  
    font-size: x-large;
} 
