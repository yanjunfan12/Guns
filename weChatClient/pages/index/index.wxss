/**index.wxss**/
#add{  
    background: #f5f5f5;  
}  
.page__hd{    
    text-align: center;
}
.page__title{
    display: inline-block;    
    font-size: x-large;
    border-bottom: 1rpx solid #CCCCCC;
}
.section__text{
    float: left;    
    width:100%; 
    font-size: x-large;
}
.section{  
    clear: both;  
    width: 90%;  
    margin: 2rem auto;  
}  
.input-text{  
    padding: 5rpx; 
    border: 1rpx solid #ddd;  
    width: 100%;  
    background-color: #FFFFFF;  
    font-size: x-large;
}  
.input-hidden{
    display: none;
}
.button__reset{  
    border: 1rpx solid #1aad19;  
    border-radius: 2rpx;  
    background-color: red; 
    font-size: x-large;
}  
.button__submit{  
    border: 1rpx solid #1aad19;  
    background-color: green; 
    border-radius: 2rpx;  
    font-size: x-large;
} 
.picker{  
    padding: 0rpx;  
    background-color: #FFFFFF;  
    width: 100%;  
    font-size: x-large;
}  
.textAera{  
    padding: 5rpx;  
    float: left;  
    width: 100%;  
    border: 1rpx solid #ddd;  
    background-color: #FFFFFF;  
    font-size: x-large;
} 